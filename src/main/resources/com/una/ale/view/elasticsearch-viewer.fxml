<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.una.ale.controllers.ElasticsearchViewController">
   <children>
      <VBox prefHeight="700.0" prefWidth="1000.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
               <children>
                  <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="🔍 Elasticsearch Data Viewer" />
                  <Label fx:id="lblConnectionStatus" style="-fx-font-size: 14px; -fx-text-fill: #ecf0f1;" text="Verificando conexión..." />
               </children>
            </HBox>
            
            <!-- Controls Section -->
            <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Índice:" />
                  <ComboBox fx:id="cmbIndices" prefWidth="200.0" promptText="Seleccionar índice" />
                  <Button fx:id="btnRefreshIndices" mnemonicParsing="false" onAction="#onRefreshIndices" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="🔄 Actualizar" />
                  <Button fx:id="btnLoadData" mnemonicParsing="false" onAction="#onLoadData" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="📊 Cargar Datos" />
                  <Button fx:id="btnClearData" mnemonicParsing="false" onAction="#onClearData" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="🗑️ Limpiar" />
               </children>
            </HBox>
            
            <!-- Info Panel -->
            <HBox spacing="20.0" style="-fx-background-color: #f8f9fa; -fx-padding: 10;">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Información del Índice:" />
                        <Label fx:id="lblIndexName" text="Índice: -" />
                        <Label fx:id="lblDocumentCount" text="Documentos: -" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Cluster Info:" />
                        <Label fx:id="lblClusterName" text="Cluster: -" />
                        <Label fx:id="lblElasticsearchVersion" text="Versión: -" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <!-- Data Table -->
            <TableView fx:id="tblDocuments" prefHeight="400.0" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colDocumentId" prefWidth="150.0" text="Document ID" />
                  <TableColumn fx:id="colId" prefWidth="80.0" text="ID" />
                  <TableColumn fx:id="colFecha" prefWidth="120.0" text="Fecha" />
                  <TableColumn fx:id="colCliente" prefWidth="150.0" text="Cliente" />
                  <TableColumn fx:id="colProducto" prefWidth="120.0" text="Producto" />
                  <TableColumn fx:id="colCantidad" prefWidth="80.0" text="Cantidad" />
                  <TableColumn fx:id="colPrecio" prefWidth="100.0" text="Precio Unit." />
                  <TableColumn fx:id="colTotal" prefWidth="100.0" text="Total" />
                  <TableColumn fx:id="colProvincia" prefWidth="120.0" text="Provincia" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            
            <!-- Status Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #34495e; -fx-padding: 10;">
               <children>
                  <Label fx:id="lblStatus" style="-fx-text-fill: white;" text="Listo para cargar datos" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="lblLoadedCount" style="-fx-text-fill: #bdc3c7;" text="0 documentos cargados" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="0.0" left="0.0" right="0.0" top="0.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>